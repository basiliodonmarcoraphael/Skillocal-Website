<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_marginVertical="6dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_applicant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applicant Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/layout_applicant_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_applicant_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: example@example.com"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_applicant_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume: Sample resume details here"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
</LinearLayout>
