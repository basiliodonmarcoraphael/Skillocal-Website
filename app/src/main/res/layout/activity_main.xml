<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:id="@+id/icon_menu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/icon_kebab"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="More options"
                    app:tint="@color/white"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Scroll Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKILLOCAL"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnMasterData"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Welcome!"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/panel_gray"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_marginTop="24dp"
                    android:text="REPORTS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center" />

                <!-- Counts -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_est_count"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:text="Establishments\n0"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@color/panel_gray"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_job_count"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:text="Job Postings\n0"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@color/panel_gray"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/primary"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
