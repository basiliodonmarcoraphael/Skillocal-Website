<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/panel_gray">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_portfolio"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_gravity="start|center_vertical"
            android:paddingStart="12dp"
            app:tint="@color/white"/>


        <!-- Centered Title -->
        <TextView
            android:id="@+id/tv_toolbar_title"
            android:text="Career Portfolio"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Body -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar_portfolio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:text="Manage Your Professional Records"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Work Experience Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/panel_gray"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:text="Work Experience"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_add_work"
                    android:text="Add Work Experience"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>

                <!-- list of work experience-->
                <LinearLayout
                    android:id="@+id/layout_workExperience"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp" />

            </LinearLayout>



            <!-- Eligibility Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/panel_gray"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:text="Eligibility and Licenses"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_add_eligibility"
                    android:text="Add Eligibility / License"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>

                <!-- list of eligibility -->
                <LinearLayout
                    android:id="@+id/layout_eligibility"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp" />

            </LinearLayout>


            <!-- Training Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/panel_gray"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:text="Training and Skills Development"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_add_training"
                    android:text="Add Training"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>

                <!-- list of training -->
                <LinearLayout
                    android:id="@+id/layout_training"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
