<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/panel_gray">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_edit_work"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary"
            android:padding="12dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    app:tint="@color/white" />

                <TextView
                    android:text="Edit Work Experience"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Form -->
        <EditText
            android:id="@+id/et_company"
            android:hint="Company Name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_address"
            android:hint="Company Address"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <EditText
            android:id="@+id/et_position"
            android:hint="Position"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <EditText
            android:id="@+id/et_months"
            android:hint="Months Worked"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- Updated: Employment Status as Spinner -->
        <Spinner
            android:id="@+id/sp_status"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:text="Save"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
