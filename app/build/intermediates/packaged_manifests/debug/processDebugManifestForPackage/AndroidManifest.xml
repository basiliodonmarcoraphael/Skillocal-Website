<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skillocal_final"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="35" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="com.example.skillocal_final.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.skillocal_final.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SKILLocalfinal" >

        <!-- Launcher -->
        <activity
            android:name="com.example.skillocal_final.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.skillocal_final.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.EstablishmentsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.AddEligibilityActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.AddTrainingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.AddWorkExperienceActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.EditWorkExperienceActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.EditEligibilityActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.EditTrainingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.CareerPortfolioActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.JobApplicationActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.ManageEmployerProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.ManageEmployeeProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.JobVacancyActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.JobMatchingEmployeeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.JobMatchingEmployerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.JobsAppliedActivity"
            android:exported="false" />
        <activity
            android:name="com.example.skillocal_final.ApplicantsListActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.skillocal_final.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>